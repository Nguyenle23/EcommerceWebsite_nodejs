<div class="content-body">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-body py-2 d-flex justify-content-between align-items-center">
						<div>
							<h4 class="m-0">Danh sách sản phẩm</h4>
							<!-- <span>Lorem ipsum sit amet</span> -->
						</div>
						<a href="/adminCreateList" class="btn btn-info light">+ Thêm sản phẩm mới</a>
					</div>
				</div>
			</div>

			<!-- Product -->
			{{#each products}}
			<div class="col-xl-4 col-xxl-4 col-md-6 col-sm-6">
				<div class="card user-card">
					<div class="card-body pb-0">
						<div class="d-flex mb-3 align-items-center">
							<div class="dz-media">
								<img src="{{this.skus.0.img}}" alt="image_product">
							</div>
						</div>
						<h5 class="title"><a href="">{{this.name}}</a></h5>
						<ul class="list-group list-group-flush">
							<li class="list-group-item">
								<span class="mb-0 title">Loại:</span>
								<span class="text-black ml-2">{{this.category}}</span>
							</li>
							<li class="list-group-item">
								<span class="mb-0 title">SKU:</span>
								{{#each this.skus}}
								<span class="text-black ml-2">{{this.sku}}</span>
								<span class="text-black ml-2">||</span>
								{{/each}}
							</li>
							<li class="list-group-item">
								<span class="mb-0 title">Giá:</span>
								<span class="text-black desc-text ml-2">{{this.price}}</span>
							</li>
						</ul>
					</div>
					<div class="card-footer d-flex">
						<a href="javascript:void(0);" class="btn btn-success btn-xs">Chỉnh sửa sản phẩm</a>

						{{!-- <a type="submit" class="btn btn-primary btn-xs ml-1" data-toggle="modal" data-id="{{this._id}}"
							data-target="#basicModal" data-bs-target="#delete-cusomter-modal">Xoá</a> --}}

						<a type="submit" class="btn btn-primary btn-xs ml-1">Xóa</a>


					</div>
				</div>
			</div>
			{{/each}}
			<!-- End Product -->
		</div>
	</div>
</div>

<!--confirm-->
<div id="delete-cusomter-modal" class="modal" tabindex="-1">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title">Xoá khách hàng</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				<p>Bạn có chắc chắn muốn xoá khách hàng này !!! </p>
			</div>
			<div class="modal-footer">
				<button id="btn-delete-customer" type="button" class="btn btn-danger">Xoá bỏ</button>
				<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Huỷ</button>
			</div>
		</div>
	</div>
</div>

<!--form delete course -->
<form method="POST" name="delete-customer-form"></form>

<!--Script callback function to delete-->
<script>
	document.addEventListener("DOMContentLoaded", function () {
		var customerId;
		var deleteForm = document.forms['delete-customer-form'];
		var btnDeleteCustomer = document.getElementById('btn-delete-customer');

		//when dialog confirm click
		$('#delete-cusomter-modal').on('show.bs.modal', function (event) {

			var button = $(event.relatedTarget) // Button that triggered the modal
			customerId = button.data('id')          // Extract info from data-* attributes
		});

		btnDeleteCustomer.onclick = function () {
			deleteForm.action = `/bookingRoom/${customerId}?_method=DELETE`;
			deleteForm.submit();
		}
	});
</script>