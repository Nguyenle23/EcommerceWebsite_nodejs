<!-- Start Cart modal -->
<div class="site-cart">
   <div class="site-cart-overlay"></div>

   <div class="site-nav-container-last">
      <div class="cart-modal-title">
         <span class="modal-title-text">Giỏ hàng</span>
         <span id="cart-btn-close" class="cart-close-btn">
            <i class="fas fa-times"></i>
         </span>
      </div>

      {{!-- Empty cart class --> cart-view-list-empty --}}
      <div class="cart-view-list clearfix">
         <table class="cart-view cart-view-empty">
            <tr class="cart-item cart-item-empty">
               <td>Chưa có sản phẩm trong giỏ hàng</td>
            </tr>
         </table>

         <!-- Start Cart Table -->
         <table class="cart-view">
            <tbody>
               <tr class="cart-item">
                  <td class="item-img">
                     <img class="img-fluid" src="https://cf.shopee.vn/file/427e5f84a66a40c2c1cdbcbca09a42ab"
                        alt="Card image cap" id="product-detail">
                  </td>

                  <td>
                     <a href="" class="item-title">Snake High Chain</a>
                     <span class="item-properties">Bạc, 16cm</span>
                     <div class="item-amount">
                        <form class="item-view-quantity">
                           <div class="value-button" id="decrease" onclick="decreaseValue()" value="Decrease Value">-
                           </div>
                           <input type="number" id="number" value="1" />
                           <div class="value-button" id="increase" onclick="increaseValue()" value="Increase Value">+
                           </div>
                        </form>
                        <span class="item-view-price">100.000đ</span>
                     </div>
                  </td>
                  <td>
                     <a class="remove-link" href="">
                        <i class="fas fa-times"></i></a>
                     </a>
                  </td>
               </tr>

               <tr class="cart-item">
                  <td class="item-img">
                     <img class="img-fluid" src="https://cf.shopee.vn/file/427e5f84a66a40c2c1cdbcbca09a42ab"
                        alt="Card image cap" id="product-detail">
                  </td>

                  <td>
                     <a href="" class="item-title">Snake High Chain</a>
                     <span class="item-properties">Bạc, 16cm</span>
                     <div class="item-amount">
                        <!-- <span class="item-view-quantity">1</span> -->

                        <form class="item-view-quantity">
                           <div class="value-button" id="decrease" onclick="decreaseValue()" value="Decrease Value">-
                           </div>
                           <input type="number" id="number" value="1" />
                           <div class="value-button" id="increase" onclick="increaseValue()" value="Increase Value">+
                           </div>
                        </form>

                        <span class="item-view-price">100.000đ</span>
                     </div>
                  </td>
                  <td>
                     <a class="remove-link" href="">
                        <i class="fas fa-times"></i></a>
                     </a>
                  </td>
               </tr>
            </tbody>
         </table>
         <!-- End Cart Table -->

         <span class="line"></span>

         <!-- Start Total Table -->
         <table class="table-total">
            <tbody>
               <tr>
                  <td class="text-left">TỔNG TIỀN:</td>
                  <td class="text-right">0đ</td>
               </tr>
            </tbody>
         </table>

         <a class="btn btn-success btn-site-cart" href="cart.html">THANH TOÁN</a>
         <!-- End Total Table -->
      </div>
   </div>
</div>
<!-- End Cart modal -->

<!-- Start Content -->
<div class="container py-5">
   <div class="row js-product-row">

      {{!-- Category --}}
      <div class="col-lg-3">
         <h1 class="h2 pb-4">Danh mục sản phẩm</h1>
         <ul class="list-unstyled">
            <li class="pb-2">
               <h3 class="h3" href="#">Loại</h3>
               <ul class="list-unstyled pl-3">
                  {{#each category}}
                  <li>
                     {{!-- <a class="sildeDown-item text-decoration-none"
                        href="/product/query/{{this._id}}">{{this.cat_title}}</a> --}}
                     <label class="attr-check-btn sildeDown-item text-decoration-none">{{this.title}}
                        <input name="fooby[1][]" class="check-btn radio" value="{{this.title}}" type="checkbox">
                        <span class="checkmark"></span>
                     </label>
                  </li>
                  {{/each}}
               </ul>
            </li>

            {{!-- <li class="pb-2">
               <h3 class="d-flex h3 text-decoration-none" href="#">Màu sắc</h3>
               <ul class="list-unstyled pl-3">
                  {{#each color}}
                  <li>
                     <label class="attr-check-btn sildeDown-item text-decoration-none">{{this.title}}
                        <input name="fooby[1][]" class="check-btn radio" value="{{this.title}}" type="checkbox">
                        <span class="checkmark"></span>
                     </label>
                  </li>
                  {{/each}}
               </ul>
            </li> --}}

         </ul>
         </ul>
      </div>

      <div class="col-lg-9 js-product-area">
         <div class="row">
            <div class="col-12 col-md-12 col-lg-6 pb-4 offset-lg-6">
               <input type="text" class="form-control" id="myInput" name="q" placeholder="Tìm kiếm sản phẩm...">
            </div>
         </div>

         {{!-- Empty product list --}}
         <div class="row">
            <div class="empty-p-list">
               <i class="empty-icon fas fa-frown"></i>
               <span class="empty-text">Không tìm thấy sản phẩm phù hợp</span>
            </div>
         </div>

         {{!-- End Empty product list --}}

         <div class="row js-product-area-2">
            {{#each p}}
            <div id="myDIV" class="col-12 col-md-4 col-lg-4">
               <a href="/product/detail/{{this._id}}" class="text-decoration-none">
                  <div class="card product-wap mb-4">

                     {{!--Product image --}}
                     <div class="card">
                        <img class="card-img rounded-0 img-fluid" src="{{this.skus.0.img}}">
                     </div>

                     <div class="card-body">
                        <span class="product-title text-decoration-none">{{this.name}}</span>
                        <input class="input-hidden" hidden value="{{this.category}}" type="text">

                        {{!-- Product color dot --}}
                        <ul class="mb-1 list-unstyled">
                           <li style="line-height: 1;">
                              {{#each this.skus}}
                              <span class="product-color-dot"
                                 style="background-color: {{this.color.color_code}};"></span>
                              <input class="input-hidden" hidden value="{{this.color.title}}" type="text">
                              {{/each}}
                           </li>
                        </ul>

                        <span class="product-price">{{this.price}}</span>
                        <span class="product-price">vnđ</span>

                     </div>
                  </div>
               </a>
            </div>
            {{/each}}
         </div>

         <div div="row">
            <ul class="pagination pagination-lg justify-content-end">
               <li class="page-item disabled">
                  <a class="page-link active rounded-0 mr-3 shadow-sm border-top-0 border-left-0" href="#"
                     tabindex="-1">1</a>
               </li>
               <li class="page-item">
                  <a class="page-link rounded-0 mr-3 shadow-sm border-top-0 border-left-0 text-dark" href="#">2</a>
               </li>
               <li class="page-item">
                  <a class="page-link rounded-0 shadow-sm border-top-0 border-left-0 text-dark" href="#">3</a>
               </li>
            </ul>
         </div>
      </div>

   </div>
</div>
<!-- End Content -->