<!-- Start Cart modal -->
<div class="site-cart">
    <div class="site-cart-overlay"></div>

    <div class="site-nav-container-last">
        <div class="cart-modal-title">
            <span class="modal-title-text">Giỏ hàng</span>
            <span id="cart-btn-close" class="cart-close-btn">
                <i class="fas fa-times"></i>
            </span>
        </div>

            <!-- Start Cart Table -->
            <table class="cart-view" id="cart-view">
                <tbody>
                    <tr class="cart-item cart-item-empty"><td>Chưa có sản phẩm trong giỏ hàng</td></tr>
                </tbody>
            </table>
            <!-- End Cart Table -->

            <span class="line"></span>

            <!-- Start Total Table -->
            <table class="table-total">
                <tbody>
                    <tr>
                        <td class="text-left">TỔNG TIỀN:</td>
                        <td class="cart-total-price text-right" id="cart-total-price">0</td>
                    </tr>
                </tbody>
            </table>

            <a class="btn btn-success btn-site-cart" href="">THANH TOÁN</a>
            <!-- End Total Table -->
        </div>
    </div>
</div>
<!-- End Cart modal -->

<!-- Open Content -->
<section class="bg-light">
    <div class="container pb-5">
        <div class="row product-container">
            <div class="col-lg-5 mt-5">
                <div class="card mb-3">
                    <img class="card-img img-fluid product-img" src="{{sku.img}}" alt="thumbnail" id="product-detail">
                    {{!-- {{/each}} --}}
                </div>

            </div>

            <!-- col end -->
            <div class="col-lg-7 mt-5">
                <div class="card">
                    <div class="card-body">

                        <h3 class="content-product-h3 product-name">{{product.name}}</h3>
                        <!-- <p>Lắc tay bạc unisex</p> -->

                        <div class="card-body-price">
                            <h4 class="price-unit product-price">{{product.price}}</h4>
                            <p class="price-unit">vnd</p>
                        </div>

                        <ul class="list-inline">
                        </ul>

                        {{!-- Input value for cart --}}
                        <input hidden value="{{sku.color.title}}" class="product-color" type="text">
                        <input hidden value="{{size.size}}" class="product-size" type="text">
                        <input hidden value="{{sku.sku}}" class="product-sku" type="text">

                        <form action="" method="GET">
                            <input type="hidden" name="product-title" value="Activewear">
                            <div class="row">
                                <div class="col-12">
                                    <ul class="list-inline pb-3 d-flex align-items-center">
                                        <li class="list-inline-item">Màu sắc :</li>
                                        {{#each product.skus}}
                                        <li class="list-inline-item m-0">
                                            <a href="/product/detail/{{../product._id}}/{{this.sku}}/{{../size.size}}">
                                                <span class="product-detail-dot"
                                                    style="background-color: {{this.color.color_code}};"></span>
                                            </a>
                                        </li>
                                        {{/each}}
                                    </ul>
                                </div>

                                <div class="col-12">
                                    <ul class="list-inline pb-3">
                                        <li class="list-inline-item">Kích cỡ :</li>
                                        {{#each sku.sizes}}
                                        <li class="list-inline-item m-0">
                                            <a class="" class="text"
                                                href="/product/detail/{{../product._id}}/{{../sku.sku}}/{{this.size}}">
                                                <span class="sku-sizes-picker">{{this.size}}</span>
                                            </a>
                                        </li>
                                        {{/each}}
                                    </ul>
                                </div>

                                <div class="col-12">
                                    <ul class="list-inline pb-3">
                                        <li class="list-inline-item text-right">
                                            Quantity
                                        </li>

                                        <li class="list-inline-item">
                                            <div class="quantity-selection">
                                                <form>
                                                    <div class="value-button" id="decrease" onclick="decreaseValue()"
                                                        value="Decrease Value">-</div>
                                                    <input class="skuQty product-qty" type="number" name="name"
                                                        id="number" value="1" min="1" max="{{size.qty}}">
                                                    <div class="value-button" id="increase" onclick="increaseValue()"
                                                        value="Increase Value">+</div>
                                                </form>
                                            </div>
                                        </li>
                                    </ul>
                                    <div class="col d-grid">
                                        <div class="btn btn-success add-cart-btn" value="addtocard">Thêm vào giỏ hàng
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Close Content -->

